{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "app.ts",
    "config/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts"
  ],
  "exclude": ["node_modules"]
}